{# templates/student/lists.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Liste des Étudiants</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
</head>
<style>
/* Styles in public/css/styles.css */

body {
    font-family: Arial, sans-serif;
    margin: 20px;
}

h1 {
    text-align: center;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}

th, td {
    padding: 12px;
    text-align: left;
    border: 1px solid #dddddd;
}

th {
    background-color: #f2f2f2;
}

tr:nth-child(even) {
    background-color: #f9f9f9;
}

tr:hover {
    background-color: #f1f1f1;
}

.action-buttons {
    display: flex;
    gap: 10px; /* Space between buttons */
}
</style>
<body>
    <h1>Liste des Étudiants</h1>
    <a href="{{ path('add_student') }}">Ajouter un Étudiant</a>
    {% if students is not empty %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>CIN</th>
                    <th>Nom</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>{{ student.id }}</td>
                        <td>{{ student.cin }}</td>
                        <td>{{ student.nom }}</td>
                        <td>{{ student.email }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun étudiant trouvé.</p>
    {% endif %}
</body>
</html>
